@model IdentityDemo.Models.AccountViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
}

<link href="~/lib/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/admin/site/login.css" rel="stylesheet" />
<link href="~/css/admin/site/helper.css" rel="stylesheet" />
<link href="~/lib/assets/global/plugins/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link rel="shortcut icon" href="~/swork.ico" />
<style>
    @@media(min-width: 768px) and (max-width: 1024px) {
        #panel {
            top: 550px;
        }

        .form-control {
            width: 650px;
            height: 60px;
            font-size: 25px;
        }

        span {
            font-size: 25px;
        }
    }
</style>
<div class="row" style="text-align:center">
    <div id="panel" class="col-md-3 login_panel" style="margin-top:180px; padding-top:5px;transform:scale(1.4)">
        <h4 id="h4" style="color:#000000; font-size: 45px">@ViewData["Title"]</h4>
        <form method="post">
            <div class="form-group">
                @if (ViewData?.ModelState[""]?.Errors?.Any() == true)
                {
                    <div asp-validation-summary="All" class="text-danger alert alert-danger" style="color: red !important;"></div>
                }
            </div>
            @* <div class="form-group">
                <label asp-for="Email" id="label" class="pull-left" style="color:#000000; font-weight:300; font-size: 30px"></label>
                <input asp-for="Email" placeholder="Nhập email..." class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="PhoneNumber" id="label" class="pull-left" style="color:#000000; font-weight:300; font-size: 30px"></label>
                <input asp-for="PhoneNumber" placeholder="Nhập số điện thoại..." class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div style="margin-top:5px">
                <button type="submit" class="btn btn-login mb30 fs11"><span>Gửi yêu cầu</span></button>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
