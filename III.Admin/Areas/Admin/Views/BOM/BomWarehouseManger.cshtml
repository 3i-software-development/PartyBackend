@using ESEIM.Utils
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = ViewData["CrumbBOM"];
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";

    var session = HttpContextAccessor.HttpContext.GetSessionUser();

    string apiList = "/Admin/ProductImport/GridDataOfUser";
    var userType = 0;
    bool isAdmin = false;
    if (session.UserType == 10)
    {
        apiList = "/Admin/ProductImport/GridDataOfAdmin";
        userType = 10;
        isAdmin = true;
    }
    else
    {
        var perJtable = session.GetPermission("ProductImport", "GridDataOfAdmin");
        if (perJtable != null)
        {
            apiList = perJtable.ResourceApi;
            userType = 10;
        }
        else
        {
            perJtable = session.GetPermission("ProductImport", "GridDataOfBranch");
            if (perJtable != null)
            {
                apiList = perJtable.ResourceApi;
                userType = 2;
            }
        }
    }
    bool hasPermissionMaterialImpStoreInsert = session.HasPermission(CommonUtil.Controller_MaterialImpStore, CommonUtil.Action_Insert);
    bool hasPermissionMaterialImpStoreUpdate = session.HasPermission(CommonUtil.Controller_MaterialImpStore, CommonUtil.Action_Update);
    bool hasPermissionMaterialImpStoreDelete = session.HasPermission(CommonUtil.Controller_MaterialImpStore, CommonUtil.Action_Delete);

    bool hasPermissionMaterialProductsInsert = session.HasPermission(CommonUtil.Controller_MaterialProduct, CommonUtil.Action_Insert);
    bool hasPermissionMaterialProductsUpdate = session.HasPermission(CommonUtil.Controller_MaterialProduct, CommonUtil.Action_Update);
    bool hasPermissionMaterialProductDelete = session.HasPermission(CommonUtil.Controller_MaterialProduct, CommonUtil.Action_Delete);
    var prodCustomUuid = session.ProductCustomUuid;
    var sessionLanguage = HttpContextAccessor.HttpContext.Session;
    byte[] value;
    var idObject = 0;
    if (sessionLanguage.IsAvailable)
    {
        var boolValue = sessionLanguage.TryGetValue("IdObject", out value);
        if (boolValue)
        {
            byte[] temp = new byte[4];
            if (BitConverter.IsLittleEndian)
            {
                temp = Enumerable.Reverse(value).ToArray();
            }
            idObject = BitConverter.ToInt32(temp, 0);
        }
    }
    var isAllData = session.IsAllData;
}
