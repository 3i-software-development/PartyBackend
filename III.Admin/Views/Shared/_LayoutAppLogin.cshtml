<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="shortcut icon" href="~/images/logo/logo1.png"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/lib/robust/css/bootstrap.css">
    <link href="/lib/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet"
          type="text/css" />
    <link href="~/css/front-end/site.css" rel="stylesheet" type="text/css" />
    <link href="/lib/assets/global/plugins/bootstrap-toastr/toastr.css" rel="stylesheet">
    <script src="~/lib/robust/core/libraries/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/robust/vendors/js/ui/unison.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/bootstrap/js/bootstrap.min.js"></script>
    @*Angularjs v1.7.9*@
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-resource.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-route.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-cookies.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-sanitize.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-touch.min.js" type="text/javascript"></script>
    <script src="~/lib/assets/global/plugins/angularjs/1.7.9/angular-animate.min.js" type="text/javascript"></script>
    <script src="/lib/assets/global/plugins/angularjs/plugins/angular-ui-router.min.js"></script>
    <script src="/lib/assets/global/plugins/angularjs/plugins/ocLazyLoad.min.js"></script>
    <script src="/lib/assets/global/plugins/angularjs/plugins/ui-bootstrap-tpls.min.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/angular-cookies.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate-interpolation-messageformat.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate-storage-cookie.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate-storage-local.js"></script>
    <script src="~/lib/assets/global/plugins/angular-translate/2.1.8/angular-translate-loader-url.js"></script>
    <script src="/lib/assets/global/plugins/bootstrap-toastr/toastr.js"></script>
    @*Angularjs v1.7.9*@

    <script src="/lib/assets/global/plugins/jquery-validation/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/lib/assets/global/plugins/jquery-validation/angular-validate.min.js" type="text/javascript"></script>

    <script src="/lib/assets/global/scripts/app.js" type="text/javascript"></script>
    <script src="~/js/admin/site.js"></script>

    @*ui-select*@
    <script src="/lib/assets/global/plugins/ui-select/select.js" type="text/javascript"></script>
    <link href="/lib/assets/global/plugins/ui-select/select.css" rel="stylesheet" type="text/css" />

    @RenderSection("plugin_style", false)
    @RenderSection("plugin_script", false)
    @RenderSection("Styles", required: false)
    <style>
        .validation-summary-errors ul, .validation-summary-errors li {
            list-style: none;
            display: inline;
            padding: 0;
        }
        @@media (max-width: 500px){
            .mid-title{
                display:inline-block;
            }
        }
    </style>
</head>
<body>
    <div class="col-md-12 login-text-app pt-2">
        <div class="pull-right pt10" style="width: 300px">
            <div class="col-md-12">
                @if (ViewData?.ModelState[""]?.Errors?.Any() == true)
                {
                    <div asp-validation-summary="All" class="text-danger alert alert-danger" style="color: red !important;"></div>
                }
            </div>
        </div>
    </div>

    <div class="container" style="margin-top:50px">
        
        <div class="content-wrapper">
            <main class="center-segment" style="margin-top:20px">
                <div class="ui medium aligned middle aligned">
                    <!-- product-title -->
                    <div class="">
                        <div class="d-flex justify-content-center align-items-center" id="logoHeader" style="margin-bottom:30px">
                            <div class="col text-center mt-2 flex-column mid-title">
                                @{
                                    <a asp-controller="Home" asp-action="Index" id="imgHeader">
                                        <img src="~/images/logo/logo1.png" alt="Smiley face" height="60" width="60">
                                    </a>
                                }
                                <div class="d-flex justify-content-center" style="margin:0 auto">
                                    <span><h1>HỒ SƠ ĐĂNG KÝ VÀO ĐẢNG</h1><span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ui segment">
                        @RenderBody()
                    </div>
                </div>
            </main>

        </div>
    </div>

    @await Html.PartialAsync("_Partial_Footer")
    @RenderSection("scripts", required: false)
</body>
</html>
